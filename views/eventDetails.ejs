<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events -- BrainSeed</title>
    <link rel="stylesheet" href="./css/events.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
</head>

<body>
    <!--! home page for events **start  -->
    <section class="fluid-container" id="eventsHeader">
        <div class="events-heading">
            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand">BrainSeed Networks</a>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" style="box-shadow: none;"
                            aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </nav>
            <div class="event-heading-block">
                <div class="event-heading-block-element-block">
                    <h1>EVENTS</h1>
                </div>
            </div>
        </div>
        <div class="events-detail">
            <div class="events-detail-elements">
                <div class="acheiventsBlockBorder">
                    <div class="acheiventsBlocks">
                        <span class="acheiventsCount acheivementsElements">
                            <div id="eventsCount"></div>
                            
                        </span>
                        <div class="acheiventsText acheivementsElements">Total Events Completed</div>
                    </div>
                </div>
                <div class="acheiventsBlockBorder">
                    <div class="acheiventsBlocks">
                        <span class="acheiventsCount acheivementsElements">
                            <div id="opporCount"></div>
                            
                        </span>
                        <div class="acheiventsText acheivementsElements">
                            Upcoming Events
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
    <!--! home page for events **ends  -->

    <!--! Events displayed here **start  -->
    <section class="fluid-container" id="eventsDisplayArea">
        <div id="events-display-area-container">
            <div class="upper-display-area">
                <div class="typeOfEvents">
                    <li id="pastEventsNav">Past Events</li>
                    <li id="upcomingEventsNav">Upcoming Events</li>
                    <li id="ongoingEventsNav">Ongoing Events</li>
                </div>
            </div>
            <div class="lower-display-area">
                <div id="pastEvents" class="eventElements"></div>
                <div id="upcomingEvents" class="eventElements"></div>
                <div id="ongoingEvents" class="eventElements"></div>
            </div>
        </div>
    </section>
    <!--! Events displayed here **ends  -->

    <!--Bootstrap Js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-1.4.2.min.js"></script>
    <script src="./js/eventDetails.js"></script>
</body>

</html>